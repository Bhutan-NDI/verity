<!--        </encoder>-->

<!--                &lt;!&ndash;Custom LogLayout for Production - not very readable&ndash;&gt;-->
                <encoder class='ch.qos.logback.core.encoder.LayoutWrappingEncoder'>
                    <layout class='com.evernym.verity.LogLayout' />
                </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <turboFilter class='com.evernym.verity.IgnoreLoggerFilter'>
        <LoggerNameContains>DynamoDBClient, DynamoDBJournal</LoggerNameContains>
    </turboFilter>

</configuration>
